<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Build Paths -->
  <PropertyGroup>
    <TCDFxSourceBuildPath>$(TCDFxBuildPath)source\</TCDFxSourceBuildPath>
    <TCDFxSourceBuildBinPath>$(TCDFxSourceBuildPath)bin\</TCDFxSourceBuildBinPath>
    <TCDFxSourceBuildDocPath>$(TCDFxSourceBuildPath)doc\</TCDFxSourceBuildDocPath>
    <TCDFxSourceBuildObjPath>$(TCDFxSourceBuildPath)obj\</TCDFxSourceBuildObjPath>
    <TCDFxSourceBuildPkgPath>$(TCDFxSourceBuildPath)pkg\</TCDFxSourceBuildPkgPath>
  </PropertyGroup>

  <!-- MSBuild Output Properties -->
  <PropertyGroup>
    <BaseIntermediateOutputPath>$(TCDFxSourceBuildObjPath)$(MSBuildProjectName)\</BaseIntermediateOutputPath>
    <IntermediateOutputPath>$(BaseIntermediateOutputPath)$(Configuration)\</IntermediateOutputPath>
    <BaseOutputPath>$(TCDFxSourceBuildBinPath)$(MSBuildProjectName)\</BaseOutputPath>
    <OutputPath>$(BaseOutputPath)$(Configuration)\</OutputPath>
    <DocumentationFile Condition="'$(Configuration)'=='Release'">$(TCDFxSourceBuildDocPath)$(MSBuildProjectName)\doc.xml</DocumentationFile>
    <PackageOutputPath Condition="'$(Configuration)'=='Release'">$(TCDFxSourceBuildPkgPath)$(MSBuildProjectName)\</PackageOutputPath>
  </PropertyGroup>

  <!-- MSBuild Project Properties -->
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
    <OutputType>Library</OutputType>
    <Configuration Condition="'$(Configuration)'==''">Release</Configuration>
    <VersionPrefix>$(TCDFxVersionPrefix)</VersionPrefix>
    <EnableDefaultItems>false</EnableDefaultItems>
    <RootNamespace>$(MSBuildProjectName)</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <NeutralLanguage>en-US</NeutralLanguage>
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>

  <!-- MSBuild Properties (Debug)-->
  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <CheckForOverflowUnderflow>false</CheckForOverflowUnderflow>
    <Optimize>false</Optimize>
    <DebugType>full</DebugType>
    <DefineConstants>$(DefineConstants);DEBUG</DefineConstants>
  </PropertyGroup>

  <!-- MSBuild Properties (Release) -->
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <Optimize>true</Optimize>
    <DebugType>pdbonly</DebugType>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
</Project>