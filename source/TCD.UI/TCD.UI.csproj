<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);TCD_UI</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="src\**\*.cs" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="$(TCDFxSourceCommonPath)lib\win-x64\libui.dll" Link="lib\win-x64\libui.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
    <Content Include="$(TCDFxSourceCommonPath)lib\linux-x64\libui.so" Link="lib\linux-x64\libui.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
    <Content Include="$(TCDFxSourceCommonPath)lib\linux-x64\libui.so.0" Link="lib\linux-x64\libui.so.0">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
    <Content Include="$(TCDFxSourceCommonPath)lib\osx-x64\libui.dylib" Link="lib\osx-x64\libui.dylib">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
    <Content Include="$(TCDFxSourceCommonPath)lib\osx-x64\libui.A.dylib" Link="lib\osx-x64\libui.A.dylib">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <None Include="$(TCDFxSourceCommonPath)ref\ui.h" Link="ref\ui.h" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="$(TCDFxSourcePath)TCD.Disposable\TCD.Disposable.csproj" />
    <ProjectReference Include="$(TCDFxSourcePath)TCD.Drawing.Primitives\TCD.Drawing.Primitives.csproj" />
    <ProjectReference Include="$(TCDFxSourcePath)TCD.InteropServices\TCD.InteropServices.csproj" />
  </ItemGroup>
</Project>