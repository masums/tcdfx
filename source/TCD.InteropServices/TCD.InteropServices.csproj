<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="src\**\*.cs" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="$(TCDFxSourceCommonPath)src\TCD\PlatformHelper.cs" Link="src\TCD\PlatformHelper.cs" />
    <Compile Include="$(TCDFxSourceCommonPath)src\TCD\Native\AssemblyRef.cs" Link="src\TCD\Native\AssemblyRef.cs" />
    <Compile Include="$(TCDFxSourceCommonPath)src\TCD\Native\Kernel32.cs" Link="src\TCD\Native\Kernel32.cs" />
    <Compile Include="$(TCDFxSourceCommonPath)src\TCD\Native\Libc.cs" Link="src\TCD\Native\Libc.cs" />
    <Compile Include="$(TCDFxSourceCommonPath)src\TCD\Native\Libdl.cs" Link="src\TCD\Native\Libdl.cs" />
    <Compile Include="$(TCDFxSourceCommonPath)src\TCD\Native\Ntdll.cs" Link="src\TCD\Native\Ntdll.cs" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="$(TCDFxSourcePath)TCD.Disposable\TCD.Disposable.csproj" />
  </ItemGroup>
  <ItemGroup>
    <!-- This is required by PlatformHelper.cs -->
    <!-- This targets netstandard1.6, so those deps are included. See https://github.com/dotnet/core-setup/pull/4586 -->
    <PackageReference Include="Microsoft.Extensions.DependencyModel" Version="2.1.0" />
  </ItemGroup>
</Project>